<img src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" class="" alt="Responsive image" width="100%" height=350px>
<div class="container mt-n5">
  <div class="row">
    <div class="col-8">
      <div class="card bg-white p-3">
        <h1><%= @flat.name %></h1>
        <h5><%= @flat.address %></h5>
        <br>
        <br>
        <h2>A bit more about this flat... </h2>
        <p><%= @flat.description  %></p>
      </div>
    </div>
    <div class="col-4">
      <div class="card bg-white px-1">
        <div class="bg-light p-3">
          <h2>Book this place</h2>
          <form action="#">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-addon" id="basic-addon1">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>

        <div class="flex bg-light p-3">
          <h2>Details:</h2>
          <i class="fas fa-user-friends mx-2"></i>
          <%= @flat.number_of_guests %>
          <i class="fas fa-euro-sign  mx-2"></i>
          <%= @flat.price_per_night %>
        </div>
        <div class="flex-align">
          <h6>Share</h6>
          <div class="flex">
                      <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
